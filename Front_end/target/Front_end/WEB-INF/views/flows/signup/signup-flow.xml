<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">


    <var name="user" class="Back_end.DTO.User" />
    <var name="billing" class="Back_end.DTO.Address" />


    <on-start>
        <evaluate expression="signupHandler.init()" result="flowScope.signupModel"/>
    </on-start>


    <!-- Start state -->
    <view-state id="personal" view="flows/signup/signup-personal" model="user">
        <!-- on - event id -->
        <transition on="billing" to="billing" />

        <!-- Persist user in signupModel -->
        <on-exit>
            <evaluate expression="signupHandler.addUser(flowScope.signupModel, user)" />
        </on-exit>
    </view-state>

    <!-- Billing state -->
    <view-state id="billing" view="flows/signup/signup-billing" model="billing">
        <!-- on - event id --><!-- on - event id -->
        <transition on="personal" to="personal" />
        <transition on="confirm" to="confirm" />

        <!-- Persist billing in signupModel -->
        <on-exit>
            <evaluate expression="signupHandler.addBilling(flowScope.signupModel, billing)" />
        </on-exit>
    </view-state>

    <!-- Confirm state -->
    <view-state id="confirm" view="flows/signup/signup-confirm" model="flowScope.signupModel">
        <!-- on - event id -->
        <transition on="personal" to="personal" />
        <transition on="billing" to="billing" />
        <transition on="submit" to="submit" />
    </view-state>


    <action-state id="submit">
        <evaluate expression="signupHandler.save(flowScope.signupModel)" />
        <transition on="success" to="success"/>
    </action-state>


    <!-- Eng state -->
    <end-state id="home" view="externalRedirect:contextRelative:/" />
    <end-state id="success" view="flows/signup/signup-success" />


    <global-transitions>
        <transition on="home" to="home" />
    </global-transitions>
</flow>